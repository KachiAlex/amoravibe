{
  "name": "amoravibe-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "deploy:web:firebase": "cross-env npm_config_loglevel=silent npm_config_optional=true firebase deploy --only hosting --config firebase.json",
    "guard:firebase": "node scripts/ensure-firebase-config.mjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@storybook/react": "^7.0.0",
    "@types/react": "18.2.79",
    "@types/react-dom": "18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.0",
    "next": "14.2.5",
    "playwright": "^1.58.2",
    "prettier": "^3.2.4",
    "prisma": "^5.22.0",
    "turbo": "^2.8.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "encoding": "^0.1.13",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "lint-staged": {
    "firebase.json": [
      "pnpm guard:firebase"
    ],
    "*.{ts,tsx,js,jsx}": [
      "npx eslint --max-warnings=0 --no-error-on-unmatched-pattern"
    ],
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "npx prettier --check"
    ]
  },
  "packageManager": "yarn@4.12.0"
}
